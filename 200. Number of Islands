class Solution:
    def numIslands(self, grid: List[List[str]]) -> int:
        # visit = set()
        
        def dfs(r, c):
            if r<0 or r>=len(grid) or c <0 or c>=len(grid[0]):
                return
            if grid [r][c] != '1':
                return
            # direction = [(1,0), (-1,0), (0,1), (0,-1)]
            
            grid[r][c]="#"
                # visit.add((r,c))
            dfs(r+1, c)
            dfs(r-1, c)
            dfs(r, c+1)
            dfs(r, c-1)
            # return
        
        res = 0
        for r in range(len(grid)):
            for c in range(len(grid[0])):
                if grid[r][c]== '1' :
                    res+=1
                    dfs(r,c)
        return res


